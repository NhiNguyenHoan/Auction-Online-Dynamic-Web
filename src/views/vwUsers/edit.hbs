<form method="POST">
    <div class="form-group">
        <label for="txtNameUser">Change Name</label>
        <input type="text" class="form-control" id="txtNameUser" name="FullName" placeholder="Enter User Name" autofocus
            value="{{user.FullName}}">
    </div>
    <div class="form-group">
        <label for="txtEmailUser">Change Email</label>
        <input type="text" class="form-control" id="txtEmailUser" name="Email" placeholder="Enter Email Name" autofocus
            value="{{user.Email}}">
    </div>
    <div class="form-group">
        <label for="txtAddressUser">Change Address</label>
        <input type="text" class="form-control" id="txtAddressUser" name="Address" placeholder="Enter Address Name"
            autofocus value="{{user.Address}}">
    </div>
    <div class="form-group">
        <label for="txtPhone">Change Phone Number</label>
        <input type="number" class="form-control" id="txtPhone" name="PhoneNumber" placeholder="Enter Your Phone"
            autofocus value="{{user.PhoneNumber}}">
    </div>
    <div class="form-group">
        <label for="txtPassword">New password</label>
        <input type="password" class="form-control" id="txtPassword" name="raw_password"
            placeholder="Enter Your Password">
    </div>

    <button type="submit" class="btn btn-outline-success" formaction="/user/information/patch">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
    </button>

</form>