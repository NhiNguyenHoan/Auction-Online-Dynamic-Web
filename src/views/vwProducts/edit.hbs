<form method="POST">
    <div class="form-group">
        <label for="txtNameUser">Change Name</label>
        <input type="text" class="form-control" id="txtNameUser" name="NameUser" placeholder="Enter User Name"
        autofocus value="{{user.FullName}}" >
    </div>
    <div class="form-group">
        <label for="txtEmailUser">Change Email</label>
        <input type="text" class="form-control" id="txtEmailUser" name="EmailUser" placeholder="Enter Email Name"
        autofocus value="{{user.Email}}">
    </div>
    <div class="form-group">
        <label for="txtPhone">Change Phone Number</label>
        <input type="number" class="form-control" id="txtPhone" name="Phone" placeholder="Enter Your Phone"
        autofocus value="{{user.PhoneNumber}}">
    </div>
    <div class="form-group">
        <label for="txtPassword">New password</label>
        <input type="password" class="form-control" id="txtPassword" name="Password" placeholder="Enter Your Password">
    </div>
    <button type="submit" class="btn btn-outline-success" formaction="/admin/categories/patch">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
    </button>
</form>